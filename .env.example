# ===========================
# DJANGO BACKEND CONFIG
# ===========================
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_DEBUG=true
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,127.0.0.1:8000
DJANGO_TIME_ZONE=UTC

# ===========================
# DATABASE
# ===========================
# Use DATABASE_URL in production (Render, Vercel, etc.)
# For local development, use individual DB settings:
DB_ENGINE=django.db.backends.postgresql
DB_NAME=OELP_Final
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
# DATABASE_URL=  # Set this for production deployments

# ===========================
# AWS S3 (Optional - for file storage)
# ===========================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=

# ===========================
# RAZORPAY PAYMENT GATEWAY
# ===========================
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# ===========================
# CELERY & REDIS (Background Tasks)
# ===========================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===========================
# PORT
# ===========================
PORT=8000
